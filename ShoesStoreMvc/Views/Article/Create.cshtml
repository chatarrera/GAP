@model ShoesStoreMvc.Models.ArticleDTO

@{
    ViewBag.Title = "ShoesStore";
    Layout = "~/Views/Shared/_LayoutAndia.cshtml";
}


<!-- Testimonials -->
<div class="testimonials-container">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 testimonials-title wow fadeIn">
                <h2>Create Item</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 testimonial-list">
                <div role="tabpanel">
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="tab2">
                            <div class="testimonial-image">
                                <img src="@Url.Content("~/Content/themes/andia/assets/")img/testimonials/2.jpg" alt="" data-at2x="@Url.Content("~/Content/themes/andia/assets/")img/testimonials/2.jpg">
                            </div>
                            <div class="testimonial-text">
                                <p>
                                    "Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip
                                    ex ea commodo consequat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit
                                    lobortis nisl ut aliquip ex ea commodo consequat..."<br>
                                </p>
                                <p>
                                    @Html.ActionLink("Back to List", "Index")
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation">
                            <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab"></a>
                        </li>
                        <li role="presentation" class="active">
                            <a href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab"></a>
                        </li>
                        <li role="presentation">
                            <a href="#tab3" aria-controls="tab3" role="tab" data-toggle="tab"></a>
                        </li>
                        <li role="presentation">
                            <a href="#tab4" aria-controls="tab4" role="tab" data-toggle="tab"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="panel-body">
    <div class="row">
        <div class="col-md-7 col-md-offset-4">
            @using (Html.BeginForm("Create", "Article", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Name</em>
                    </label>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ArticleName, new { @Class = "form-control", @Styles = "font-size:medium; align:right " })
                        @Html.ValidationMessageFor(model => model.ArticleName)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Description</em>
                    </label>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ArticleDescription, new { @Class = "form-control", @Styles = "font-size:medium; align:right " })
                        @Html.ValidationMessageFor(model => model.ArticleDescription)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Price</em>
                    </label>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ArticlePrice, new { @Class = "form-control", @Styles = "font-size:medium; align:right " })
                        @Html.ValidationMessageFor(model => model.ArticlePrice)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Stock on Shelf</em>
                    </label>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.TotalShelf, new { @Class = "form-control", @Styles = "font-size:medium; align:right " })
                        @Html.ValidationMessageFor(model => model.TotalShelf)
                    </div>
                </div>
                
                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Stock on WareHouse</em>
                    </label>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.TotalWarehouse, new { @Class = "form-control", @Styles = "font-size:medium; align:right " })
                        @Html.ValidationMessageFor(model => model.TotalWarehouse)
                    </div>
                </div>
                
                <!-- Drop Down de Tipos de Inmuebles -->
                <div class="form-group row">
                    <label for="example-text-input" class="col-xs-3 col-form-label" style="font-size:medium; text-align:right">
                        <em>Store Name</em>
                    </label>
                    <div class="col-xs-3 ">
                        @*@Html.DropDownList("TipoInmuebleID", String.Concat("Seleccione"))*@
                        @Html.ValidationMessageFor(model => model.StoreID)
                    </div>
                </div>

                <div class="col-md-7 col-md-offset-1">
                    <button type="submit" class="btn btn-primary" value="Create">Save Item</button>
                </div>
            }
        </div>
    </div>
</div>
